<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_SERVIN_FORM_LBL_VENTA_CREATED_BY" description="COM_SERVIN_FORM_DESC_VENTA_CREATED_BY" hidden="true" hint="COM_SERVIN_FORM_LBL_VENTA_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_SERVIN_FORM_LBL_VENTA_MODIFIED_BY" description="COM_SERVIN_FORM_DESC_VENTA_MODIFIED_BY" hidden="true" hint="COM_SERVIN_FORM_LBL_VENTA_MODIFIED_BY"/>
    <field name="created_at" type="timecreated" label="COM_SERVIN_FORM_LBL_VENTA_CREATED_AT" description="COM_SERVIN_FORM_DESC_VENTA_CREATED_AT" hidden="true" hint="COM_SERVIN_FORM_LBL_VENTA_CREATED_AT"/>
    <field name="modified_at" type="timecreated" label="COM_SERVIN_FORM_LBL_VENTA_MODIFIED_AT" description="COM_SERVIN_FORM_DESC_VENTA_MODIFIED_AT" hidden="true" hint="COM_SERVIN_FORM_LBL_VENTA_MODIFIED_AT"/>
    <field
    name="piezas"
    required="true"
    type="sql"
    label="COM_SERVIN_FORM_LBL_VENTA_PIEZAS"
    description="COM_SERVIN_FORM_DESC_VENTA_PIEZAS"
    query="SELECT p.id, concat(h.numero,'|' ,p.descripcion) as descripcion FROM #__servin_piezas as p inner join #__servin_hechuras as h on h.id = p.hechura  where p.state = 1 "
    key_field="id"
    value_field="descripcion"  multiple="multiple"
    />
    <field name="fecha" required="true" class="inputbox" timeformat="12" filter="user_utc" showtime="true" singleheader="false" todaybutton="true" weeknumbers="false" filltable="false" type="calendar" label="COM_SERVIN_FORM_LBL_VENTA_FECHA" description="COM_SERVIN_FORM_DESC_VENTA_FECHA" hint="COM_SERVIN_FORM_LBL_VENTA_FECHA"/>
    <field name="cliente" type="foreignkey" label="COM_SERVIN_FORM_LBL_VENTA_CLIENTE" description="COM_SERVIN_FORM_DESC_VENTA_CLIENTE" class="inputbox" input_type="list" table="#__servin_clientes" key_field="id" value_field="nombre" hide_trashed="1"  default="0"/>
    <field name="total" required="true" filter="safehtml" step="0.01" type="number" label="COM_SERVIN_FORM_LBL_VENTA_TOTAL" description="COM_SERVIN_FORM_DESC_VENTA_TOTAL" hint="COM_SERVIN_FORM_LBL_VENTA_TOTAL"/>
    <field name="metodo_pago" default="1" type="list" label="COM_SERVIN_FORM_LBL_VENTA_METODO_PAGO" description="COM_SERVIN_FORM_DESC_VENTA_METODO_PAGO" hint="COM_SERVIN_FORM_LBL_VENTA_METODO_PAGO">
      <option value="1">COM_SERVIN_VENTAS_METODO_PAGO_OPTION_1</option>
      <option value="2">COM_SERVIN_VENTAS_METODO_PAGO_OPTION_2</option>
      <option value="3">COM_SERVIN_VENTAS_METODO_PAGO_OPTION_3</option>
      <option value="4">COM_SERVIN_VENTAS_METODO_PAGO_OPTION_4</option>
      <option value="5">COM_SERVIN_VENTAS_METODO_PAGO_OPTION_5</option>
      <option value="6">COM_SERVIN_VENTAS_METODO_PAGO_OPTION_6</option>
    </field>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
